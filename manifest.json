{
  "manifest_version": 3,
  "name": "Gambling Site Blocker",
  "version": "1.0",
  "description": "Blocks gambling and betting websites.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_title": "Gambling Blocker"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "blockRules",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
